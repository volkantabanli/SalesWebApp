@model Category
@{
    ViewBag.Title = "View";
    Layout = "~/Areas/Admin/Views/Shared/_Admin.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h1>Kategori Görüntüle</h1>
            <div class="card">
                <div class="card-body">
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Kategory name</label>
                        <div class="col-sm-10">
                            @Model.Name
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">renk</label>
                        <div class="col-sm-10">
                            @Model.Color
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">aktif/pasif</label>
                        <div class="col-sm-10">
                            @Model.IsActive
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-12">
                            <a class="btn btn-dark" href="/admin/categories" style="float:left">İptal</a>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

