@model Product
@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Admin.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h1>Duyuru Düzenle</h1>
            <div class="card">
                <div class="card-body">
                    <form method="post" action="/admin/products/update">
                        <input type="hidden" id="Id" name="Id" value="@Model.Id" />
                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label">Başlık</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" id="Name" name="Name" value="@Model.Name" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label">Description</label>
                            <div class="col-sm-10">
                                <textarea class="form-control" id="Description" name="Description">@Model.Description</textarea>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label">UnitsInStock</label>
                            <div class="col-sm-10">
                                <textarea class="form-control" id="UnitsInStock" name="UnitsInStock">@Model.UnitsInStock</textarea>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label">UnitPrice</label>
                            <div class="col-sm-10">
                                <textarea class="form-control" id="UnitPrice" name="UnitPrice">@Model.UnitPrice</textarea>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label">SalePrice</label>
                            <div class="col-sm-10">
                                <textarea class="form-control" id="SalePrice" name="SalePrice">@Model.SalePrice</textarea>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label">Image</label>
                            <div class="col-sm-10">
                                <img width="100" height="75" src="~/Areas/UploadedFiles/@Model.Image" />
                            </div>
                            <div class="col-sm-10">
                                @Html.TextBox("file", "", new { type = "file" }) <br />


                                @ViewBag.Message

                            </div>
                        </div>


                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label">IsActive</label>
                            <div class="col-sm-10">
                                <textarea class="form-control" id="IsActive" name="IsActive">@Model.IsActive</textarea>
                            </div>
                        </div>


                        <div class="row">
                            <div class="col-sm-12">
                                <a class="btn btn-dark" href="/admin/categories" style="float:left">İptal</a>
                                <input class="btn btn-primary" type="submit" value="Kaydet" style="float:right" />
                            </div>
                        </div>

                    </form>
                </div>

            </div>
        </div>
    </div>
</div>

